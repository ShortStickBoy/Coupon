<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sunzn.coupon.library.CouponView
        android:id="@+id/coupon_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:cv_inner_dashed_blank="5"
        app:cv_inner_dashed_color="@android:color/holo_red_light"
        app:cv_inner_dashed_solid="5"
        app:cv_inner_divide_rates="0.285"
        app:cv_inner_holder_radius="10dp"
        app:cv_inner_margin_inter="10"
        app:cv_outer_circle_color="#F0F0F0"
        app:cv_outer_circle_radius="10dp"
        app:cv_outer_holder_color="@android:color/white"
        app:cv_outer_holder_radius="10dp">

        <RelativeLayout
            android:id="@+id/child_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/coupon_notice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#f0413b"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coupon_notice_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/coupon_notice_num"
                android:layout_alignBottom="@id/coupon_notice_num"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/coupon_notice_num"
                android:layout_toRightOf="@id/coupon_notice_num"
                android:text="元"
                android:textColor="#f0413b"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/child_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/coupon_notice_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人专享代金券"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/coupon_notice_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="充值满100元立减 10 元"
                android:textColor="#f0413b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coupon_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="有效期 1 小时"
                android:textColor="#777777"
                android:textSize="13sp" />

        </RelativeLayout>

    </com.sunzn.coupon.library.CouponView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置背景颜色值" />

            <SeekBar
                android:id="@+id/seekBar_holder_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置缺口颜色值" />

            <SeekBar
                android:id="@+id/seekBar_circle_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置虚线颜色值" />

            <SeekBar
                android:id="@+id/seekBar_dashed_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置分隔率" />

            <SeekBar
                android:id="@+id/seekBar_divide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置实线宽度" />

            <SeekBar
                android:id="@+id/seekBar_solid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="设置虚线宽度" />

            <SeekBar
                android:id="@+id/seekBar_blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:max="100" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
